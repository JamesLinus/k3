<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            label="Sample Action Set"
            visible="true"
            id="org.k3.language.project.actionSet">
         <menu
               label="Sample &amp;Menu"
               id="sampleMenu">
            <separator
                  name="sampleGroup">
            </separator>
         </menu>
         <action
               label="&amp;Sample Action"
               icon="icons/sample.gif"
               class="org.k3.language.ui.actions.SampleAction"
               tooltip="Hello, Eclipse world"
               menubarPath="sampleMenu/sampleGroup"
               toolbarPath="sampleGroup"
               id="org.k3.language.project.actions.SampleAction">
         </action>
      </actionSet>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <wizard
            category="fr.inria.diverse.k3.category"
            class="org.k3.language.ui.wizards.WizardNewProjectK3Plugin"
            icon="icons/new_kermeta_project.gif"
            id="org.k3.language.ui.wizards.WizardNewProjectK3Plugin"
            name="K3 Project"
            project="true">
      </wizard>
      <category
            id="fr.inria.diverse.k3.category"
            name="Kermeta 3">
      </category>
   </extension>

</plugin>
